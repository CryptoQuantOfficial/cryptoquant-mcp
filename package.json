    "ai-agent"
  ],
  "author": "CryptoQuant",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CryptoQuantOfficial/cryptoquant-mcp.git"
  },
  "homepage": "https://github.com/CryptoQuantOfficial/cryptoquant-mcp#readme",
  "bugs": {
    "url": "https://github.com/CryptoQuantOfficial/cryptoquant-mcp/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
