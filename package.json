  "version": "0.2.0",
  "description": "CryptoQuant MCP Server - On-chain analytics for Claude and AI coding agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cryptoquant-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
